# Cache directory for all documentation sources
DOCS_WEBSITE_CACHE_PATH=./data/website_cache

# Database
DB_PATH=./data/docs.db
VECTOR_DISTANCE_METRIC=cosine

# Embedding configuration (Local model - no API key needed!)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
FASTEMBED_CACHE_DIR=./data/models
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DIMENSION=384

# Chunking configuration
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=100

# MCP Server configuration
MCP_HOST=localhost
MCP_PORT=8080
MCP_CORS_ENABLED=true

# Query configuration
QUERY_RESULT_LIMIT=5
